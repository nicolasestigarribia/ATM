@page "/Retiro"
@attribute [Authorize]
<div class="container-fluid mt-5">
	@if (!string.IsNullOrEmpty(message))
    {
        <div class="alert alert-danger">@message</div>
    }
	@if (!string.IsNullOrEmpty(message2))
    {
        <div class="alert alert-danger">@message2</div>
    }

	<div class="row" style="height:100px;"></div>
		<div class="row">
				<div class="col-4"></div>
				 <div class="card col-4">
				   <div class="card-header text-center">
						<h3>Ingrese Monto</h3>
					</div>
				<div class="card-body">
					<EditForm Model="numerotrjeta" class="credit-card-div">
							  <div class="row justify-content-center ">
									  <div class="m-4">
										  <textarea id="textarea" readonly style="resize:none;">@numerotrjeta</textarea>
									  </div>
								</div>
								<div class="row justify-content-center">
										<div class="col-12">
											<SistemaBancario.Pages.Pad.PadNumerico numerotarjeta ="@obtener"></SistemaBancario.Pages.Pad.PadNumerico>
										</div>	
								</div>
							   <div class="row justify-content-center m-3">
									<div class="mr-2">
											<button class="btn btn-success" @onclick="Aceptar"> Aceptar </button>
									</div>
									<div>
											<button  class="btn btn-danger" @onclick="cancelar"> Limpiar </button>
									</div>
									<div class="ml-2">
											<button  class="btn btn-danger" @onclick="Salir"> Salir </button>
									</div>
								</div>
					  </EditForm>
				</div>
			 </div>
		<div class="col-4"></div>	
	</div>
  </div>

